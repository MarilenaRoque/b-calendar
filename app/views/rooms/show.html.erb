<p id="notice"><%= notice %></p>

<p>
  <strong>Number:</strong>
  <strong><%= @room.number %></strong>
</p>


<%= month_calendar(events: @room.meetings) do |date, meetings| %>
  <h3>
    <%= date.day %>
    <% availables = availability(meetings)%>
  </h3>
  </br>
  <% meetings.each do |meeting|%>
    <%= "#{meeting.start_time.hour}h #{meeting.title}" %>
    </br>
  <% end %>
  <%= link_to image_tag("new-meeting.svg" , size: "50", alt: "Add Icon"), new_meeting_path(:info => {:room_id => @room.id, :date => date, :availables => availables}) %>
<% end %>

<%= link_to 'Back', rooms_path %>
